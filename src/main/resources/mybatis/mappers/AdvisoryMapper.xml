        select
        <include refid="Base_Column_List"/>
        from advisory
        <include refid="WHERE_SELECT_CONDIYION"/>
        order by gmt_modified desc
    </select>
    <select id="select" parameterType="com.physical.movement.entity.Advisory" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from advisory
        <include refid="WHERE_SELECT_CONDIYION"/>
