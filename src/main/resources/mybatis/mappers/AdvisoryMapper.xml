        <where>
            1=1
            <if test="id!=null">
                and id = #{id}
            </if>
            <if test="title!=null and title!=''">
                and title like concat("%",#{title},"%")
            </if>
            <if test="author!=null">
                and author = #{author}
            </if>
            <if test="nselect!=null">
                and nselect = #{nselect}
            </if>
            <if test="wonderful!=null">
                and wonderful = #{wonderful}
            </if>
        </where>
    </sql>
